<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity"
  minHeight="-Infinity"
  minWidth="-Infinity"
  prefHeight="300.0" prefWidth="800.0" stylesheets="@../../modules/main.css"
  xmlns="http://javafx.com/javafx/8.0.111"
  fx:controller="main.ui.tabs.led.LightTabController" fx:id="lightTab">
  <children>
    <VBox AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="20.0"
      layoutX="10.0"
      layoutY="10.0"
      spacing="25.0">
      <children>
        <VBox spacing="10.0">
          <children>
            <JFXCheckBox maxHeight="-Infinity" maxWidth="-Infinity"
              minHeight="-Infinity"
              minWidth="-Infinity" text="Debris" fx:id="debrisCheckBox"/>
            <JFXCheckBox text="Dock" fx:id="dockCheckBox"/>
            <JFXCheckBox text="Spot" fx:id="spotCheckBox"/>
            <JFXCheckBox text="Check Robot" fx:id="checkRobotCheckBox"/>
          </children>
        </VBox>
        <HBox spacing="30.0">
          <children>
            <JFXTextField labelFloat="true" maxHeight="-Infinity"
              maxWidth="-Infinity"
              minHeight="-Infinity" minWidth="-Infinity" prefWidth="125.0"
              promptText="Power Color"
              fx:id="powerColorTextField"/>
            <JFXTextField labelFloat="true" maxHeight="-Infinity"
              maxWidth="-Infinity"
              minHeight="-Infinity" minWidth="-Infinity" prefWidth="125.0"
              promptText="Power Intensity"
              fx:id="powerIntensityTextField"/>
          </children>
          <VBox.margin>
            <Insets left="10.0"/>
          </VBox.margin>
        </HBox>
        <JFXButton style="-fx-background-color: #4eb769;" maxHeight="-Infinity" maxWidth="-Infinity"
          minHeight="-Infinity"
          minWidth="-Infinity" onAction="#toggle" prefHeight="30.0"
          prefWidth="100.0"
          text="Toggle" textFill="WHITE">
          <VBox.margin>
            <Insets left="10.0"/>
          </VBox.margin>
        </JFXButton>
      </children>
    </VBox>
  </children>
</AnchorPane>
