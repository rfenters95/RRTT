<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER"
  spacing="10.0" type="HBox" xmlns="http://javafx.com/javafx/8.0.111">

  <children>

    <Label maxWidth="-Infinity" minWidth="-Infinity" prefWidth="50.0" text="Note"
      fx:id="noteLabel"/>
    <JFXComboBox HBox.hgrow="ALWAYS" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="110.0"
      promptText="Pitch"
      fx:id="roombaNoteComboBox"/>
    <JFXComboBox HBox.hgrow="ALWAYS" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="140.0"
      promptText="Duration" fx:id="roombaNoteDurationComboBox"/>
    <JFXButton contentDisplay="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" onAction="#play" prefHeight="30" prefWidth="30"
      styleClass="play-button" text=" " fx:id="playButton"/>

  </children>

</fx:root>
